#!/usr/bin/env bash
# USAGE: bin/release <build-dir>

BUILD_DIR=$1

cat <<-YAML
---
addons:
  - mongolab:sandbox
config_vars:
default_process_types:
  web: PATH=.meteor/:$PATH NODE_PATH=.meteor/local/usr/lib/meteor/lib/node_modules MONGO_URL=\$MONGOLAB_URI .meteor/local/usr/lib/meteor/bin/node .meteor/local/build/main.js
YAML
